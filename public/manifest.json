{
  "manifest_version": 2,

  "name": "番薯工具",
  "description": "自动回复工具",
  "version": "1.0",

  "permissions": [
    "tabs",
    "storage",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "background"
  ],
  "icons": { 
    "16": "16.png",             
    "48": "48.png",            
    "128": "128.png" 
  },
  "background": {
    "scripts": ["static/js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.xiaohongshu.com/explore*", "https://pro.xiaohongshu.com/enterprise/message/reply*"],
      "run_at": "document_start",
      "js": ["static/js/contentscript.js"],
      "css": ["static/css/contentscript.css"]
    }
  ],
  "web_accessible_resources": ["static/js/injected.js"],
  "browser_action": {
    "default_icon": { 
      "16": "16.png",             
      "48": "48.png",            
      "128": "128.png" 
    },
    "default_popup": "index.html"
  }
}